<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ImageSettingsActivity" >

    <TextView
        android:id="@+id/tvSettigsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />
   
    <LinearLayout
        android:id="@+id/llImageSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSettigsTitle"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >
        
        <TextView
        android:id="@+id/tvImageSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Size"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
        android:id="@+id/etImageSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

        <requestFocus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llColorFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llImageSize"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >
        
        <TextView
        android:id="@+id/tvColorFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Filter"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
        android:id="@+id/etColorFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llImageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llIColorFilter"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >
        
        <TextView
        android:id="@+id/tvImageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Type"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
        android:id="@+id/etImageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSiteFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llImageType"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >
        
        <TextView
        android:id="@+id/tvSiteFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Type"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
        android:id="@+id/etSiteFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    </LinearLayout>

</RelativeLayout>