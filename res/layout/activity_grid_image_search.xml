<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GridImageSearchActivity" >

    <GridView
        android:id="@+id/gvResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:numColumns="auto_fit"
        android:columnWidth="90dp" 
        android:background="@android:color/darker_gray"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:drawSelectorOnTop="true"
        android:stretchMode="columnWidth"
        android:gravity="center" >
    </GridView>
    
    <LinearLayout
        android:id="@+id/llHomeScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivHomeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/home_screen_text1"
            android:src="@drawable/background_image" />

        <TextView
            android:id="@+id/tvLandingPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_screen_text1"
            android:layout_marginTop="20dp"
            android:textColor="#287AA9"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvLandingPageSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_screen_text2"
            android:layout_gravity="center_horizontal"
            android:textColor="#A4C739"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</RelativeLayout>